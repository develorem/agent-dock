<Window x:Class="AgentDock.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Agent Dock"
        Height="340" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="/Assets/agentdock.png"
        Background="{DynamicResource HelpBackground}">

    <Grid Margin="32,28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- App icon + name -->
            <RowDefinition Height="Auto" /> <!-- Version -->
            <RowDefinition Height="Auto" /> <!-- Description -->
            <RowDefinition Height="Auto" /> <!-- Separator -->
            <RowDefinition Height="Auto" /> <!-- Branding -->
            <RowDefinition Height="Auto" /> <!-- Links -->
            <RowDefinition Height="*" />    <!-- Spacer -->
            <RowDefinition Height="Auto" /> <!-- License -->
        </Grid.RowDefinitions>

        <!-- App icon + name -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,6">
            <Image Source="/Assets/agentdock.png"
                   Width="60" Height="60"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0" />
            <TextBlock Text="Agent Dock"
                       FontSize="24" FontWeight="SemiBold"
                       Foreground="{DynamicResource HelpForeground}"
                       VerticalAlignment="Center" />
        </StackPanel>

        <!-- Version -->
        <TextBlock Grid.Row="1"
                   Text="Version 0.1.0"
                   FontSize="13"
                   Foreground="{DynamicResource HelpMutedForeground}"
                   Margin="0,0,0,12" />

        <!-- Description -->
        <TextBlock Grid.Row="2" TextWrapping="Wrap"
                   FontSize="13"
                   Foreground="{DynamicResource HelpForeground}"
                   Margin="0,0,0,16">
            Manage multiple Claude Code AI sessions across projects in a single window.
        </TextBlock>

        <!-- Separator -->
        <Border Grid.Row="3"
                Height="1"
                Background="{DynamicResource HelpCardBorderBrush}"
                Margin="0,0,0,16" />

        <!-- Built by -->
        <TextBlock Grid.Row="4"
                   FontSize="13"
                   Foreground="{DynamicResource HelpForeground}"
                   Margin="0,0,0,10">
            Built by <Run FontWeight="SemiBold">Develorem</Run>
        </TextBlock>

        <!-- Links -->
        <StackPanel Grid.Row="5" Margin="0,0,0,0">
            <TextBlock FontSize="13" Margin="0,0,0,4">
                <Hyperlink NavigateUri="https://github.com/develorem/agent-dock"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    <Run Foreground="{DynamicResource HelpLinkForeground}"
                         Text="GitHub Repository &#x2197;" />
                </Hyperlink>
            </TextBlock>
            <TextBlock FontSize="13" Margin="0,0,0,4">
                <Hyperlink NavigateUri="https://github.com/develorem"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    <Run Foreground="{DynamicResource HelpLinkForeground}"
                         Text="Develorem &#x2197;" />
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <!-- License -->
        <TextBlock Grid.Row="7"
                   FontSize="12"
                   Foreground="{DynamicResource HelpMutedForeground}">
            Open source under the MIT License.
        </TextBlock>

    </Grid>
</Window>
