<UserControl x:Class="AgentDock.Controls.GitStatusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{DynamicResource ContentBackground}">
    <Grid>
        <!-- Branch name header -->
        <StackPanel x:Name="BranchPanel" Orientation="Horizontal"
                    Visibility="Collapsed"
                    VerticalAlignment="Top" Margin="8,6,8,0">
            <TextBlock Text="Branch:" FontSize="12"
                       FontFamily="Cascadia Code, Consolas, Courier New"
                       Foreground="{DynamicResource GitPlaceholderForeground}"
                       VerticalAlignment="Center" Margin="0,0,6,0" />
            <TextBox x:Name="BranchName" FontSize="12"
                     FontFamily="Cascadia Code, Consolas, Courier New"
                     Foreground="{DynamicResource GitStagedForeground}"
                     Background="Transparent" BorderThickness="0"
                     IsReadOnly="True" Padding="0"
                     VerticalAlignment="Center"
                     VerticalScrollBarVisibility="Disabled" />
            <Button x:Name="CopyBranchButton" Click="CopyBranch_Click"
                    ToolTip="Copy branch name"
                    Background="Transparent" BorderThickness="0"
                    Padding="2" Margin="6,0,0,0" Cursor="Hand"
                    VerticalAlignment="Center">
                <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" FontSize="12"
                           Foreground="{DynamicResource GitPlaceholderForeground}" />
            </Button>
            <Button x:Name="BranchMoreButton" Click="BranchMore_Click"
                    ToolTip="Switch branch"
                    Background="Transparent" BorderThickness="0"
                    Padding="2" Margin="2,0,0,0" Cursor="Hand"
                    VerticalAlignment="Center">
                <TextBlock Text="&#xE712;" FontFamily="Segoe MDL2 Assets" FontSize="12"
                           Foreground="{DynamicResource GitPlaceholderForeground}" />
            </Button>

            <!-- Branch picker popup -->
            <Popup x:Name="BranchPickerPopup"
                   PlacementTarget="{Binding ElementName=BranchMoreButton}"
                   Placement="Bottom"
                   StaysOpen="False"
                   AllowsTransparency="True"
                   PopupAnimation="Fade">
                <Border Background="{DynamicResource MenuPopupBackground}"
                        BorderBrush="{DynamicResource MenuPopupBorderBrush}"
                        BorderThickness="1"
                        Padding="6"
                        MinWidth="200" MaxWidth="320">
                    <StackPanel>
                        <!-- Filter textbox + create button -->
                        <DockPanel>
                            <Button x:Name="CreateBranchButton"
                                    DockPanel.Dock="Right"
                                    Click="CreateBranch_Click"
                                    ToolTip="Create new branch"
                                    Background="Transparent" BorderThickness="0"
                                    Padding="4,2" Margin="4,0,0,0" Cursor="Hand"
                                    Visibility="Collapsed"
                                    VerticalAlignment="Center">
                                <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                           Foreground="{DynamicResource GitStagedForeground}" />
                            </Button>
                            <TextBox x:Name="BranchFilterTextBox"
                                     FontSize="12"
                                     FontFamily="Cascadia Code, Consolas, Courier New"
                                     Foreground="{DynamicResource MenuForeground}"
                                     Background="{DynamicResource ContentBackground}"
                                     BorderBrush="{DynamicResource ChatInputBorderBrush}"
                                     BorderThickness="1"
                                     Padding="4,3"
                                     TextChanged="BranchFilterText_Changed"
                                     KeyDown="BranchFilterTextBox_KeyDown" />
                        </DockPanel>

                        <!-- Branch list -->
                        <ListBox x:Name="BranchListBox"
                                 MaxHeight="160"
                                 Margin="0,4,0,0"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 MouseDoubleClick="BranchListBox_MouseDoubleClick"
                                 KeyDown="BranchListBox_KeyDown">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="2,1">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="12"
                                                   FontFamily="Cascadia Code, Consolas, Courier New"
                                                   Foreground="{DynamicResource MenuForeground}"
                                                   VerticalAlignment="Center" />
                                        <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets"
                                                   FontSize="10" Margin="6,0,0,0"
                                                   Foreground="{DynamicResource GitStagedForeground}"
                                                   Visibility="{Binding CurrentVisibility}"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="{x:Type ListBoxItem}">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Padding" Value="4,2" />
                                    <Setter Property="Cursor" Value="Hand" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                <Border x:Name="Bd"
                                                        Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Bd" Property="Background"
                                                                Value="{DynamicResource MenuHighlightBackground}" />
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Bd" Property="Background"
                                                                Value="{DynamicResource MenuHighlightBackground}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </StackPanel>
                </Border>
            </Popup>
        </StackPanel>

        <!-- Not a git repo message -->
        <TextBlock x:Name="NotGitMessage"
                   Text="Not a git repository"
                   Visibility="Collapsed"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="14"
                   Foreground="{DynamicResource GitPlaceholderForeground}" />

        <!-- No changes message -->
        <TextBlock x:Name="NoChangesMessage"
                   Text="No changes"
                   Visibility="Collapsed"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="14"
                   Foreground="{DynamicResource GitPlaceholderForeground}" />

        <!-- File list -->
        <DockPanel x:Name="StatusPanel" Visibility="Collapsed" Margin="0,28,0,0">
            <ListView x:Name="FileList" BorderThickness="0" Background="Transparent"
                      SelectionMode="Single"
                      SelectionChanged="FileList_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="2,1">
                            <TextBlock Text="{Binding StatusLabel}" FontFamily="Consolas"
                                       FontSize="11" Width="20"
                                       Foreground="{Binding StatusColor}"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="{Binding FilePath}" FontSize="12"
                                       Foreground="{Binding StatusColor}"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="{Binding StagedLabel}" FontSize="10"
                                       Foreground="{DynamicResource GitStagedLabelForeground}" Margin="6,0,0,0"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </DockPanel>
    </Grid>
</UserControl>
