<UserControl x:Class="AgentDock.Controls.FilePreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:mdxaml="clr-namespace:MdXaml;assembly=MdXaml"
             mc:Ignorable="d"
             Background="{DynamicResource PreviewBackground}">
    <UserControl.Resources>
        <Style x:Key="ThemeMarkdownStyle" TargetType="FlowDocument"
               BasedOn="{x:Static mdxaml:MarkdownStyle.GithubLike}">
            <Setter Property="Foreground" Value="{DynamicResource PreviewForeground}" />
            <Setter Property="FontFamily" Value="Segoe UI, Segoe UI Emoji" />
            <Setter Property="FontSize" Value="14" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <!-- Empty state -->
        <TextBlock x:Name="EmptyMessage"
                   Text="Select a file to preview"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="16"
                   Foreground="{DynamicResource PreviewEmptyForeground}" />

        <!-- Text/code preview -->
        <avalonedit:TextEditor x:Name="TextPreview"
                               Visibility="Collapsed"
                               IsReadOnly="True"
                               ShowLineNumbers="True"
                               FontFamily="Cascadia Code, Consolas, Courier New"
                               FontSize="13"
                               BorderThickness="0"
                               Background="{DynamicResource PreviewBackground}"
                               Foreground="{DynamicResource PreviewForeground}"
                               LineNumbersForeground="{DynamicResource PreviewLineNumberForeground}"
                               HorizontalScrollBarVisibility="Auto"
                               VerticalScrollBarVisibility="Auto" />

        <!-- Rendered markdown preview -->
        <mdxaml:MarkdownScrollViewer x:Name="MarkdownPreview"
                                     Visibility="Collapsed"
                                     Background="{DynamicResource PreviewBackground}"
                                     Foreground="{DynamicResource PreviewForeground}"
                                     MarkdownStyle="{StaticResource ThemeMarkdownStyle}"
                                     VerticalScrollBarVisibility="Auto"
                                     Padding="16" />

        <!-- Image preview -->
        <ScrollViewer x:Name="ImageContainer"
                      Visibility="Collapsed"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
            <Image x:Name="ImagePreview"
                   Stretch="Uniform"
                   MaxWidth="800"
                   MaxHeight="600" />
        </ScrollViewer>

        <!-- Binary / no preview message -->
        <TextBlock x:Name="NoPreviewMessage"
                   Visibility="Collapsed"
                   Text="No Preview"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="18"
                   Foreground="{DynamicResource PreviewNoPreviewForeground}" />

        <!-- Markdown source/preview toggle button (floating top-right) -->
        <Button x:Name="MarkdownToggleButton"
                Visibility="Collapsed"
                Click="MarkdownToggle_Click"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,6,6,0"
                Padding="6,4"
                Cursor="Hand"
                ToolTip="Switch to source view"
                Background="{DynamicResource PreviewBackground}"
                BorderBrush="{DynamicResource PreviewLineNumberForeground}"
                BorderThickness="1"
                Opacity="0.85">
            <TextBlock x:Name="MarkdownToggleIcon"
                       Text="&#xE943;"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="14"
                       Foreground="{DynamicResource PreviewForeground}" />
        </Button>
    </Grid>
</UserControl>
