<UserControl x:Class="AgentDock.Controls.ProjectDescriptionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{DynamicResource ContentBackground}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Toolbar: settings + font size buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,6">
            <Button Click="SettingsButton_Click"
                    ToolTip="Edit in Project Settings"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="2"
                    Cursor="Hand">
                <TextBlock Text="&#xE713;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="14"
                           Foreground="{DynamicResource GitPlaceholderForeground}" />
            </Button>
            <Button Click="DecreaseFontSize_Click"
                    ToolTip="Decrease font size"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="2"
                    Cursor="Hand"
                    Margin="6,0,0,0">
                <TextBlock Text="&#xE108;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="14"
                           Foreground="{DynamicResource GitPlaceholderForeground}" />
            </Button>
            <Button Click="IncreaseFontSize_Click"
                    ToolTip="Increase font size"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="2"
                    Cursor="Hand"
                    Margin="2,0,0,0">
                <TextBlock Text="&#xE109;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="14"
                           Foreground="{DynamicResource GitPlaceholderForeground}" />
            </Button>
        </StackPanel>

        <!-- Read-only description display -->
        <TextBlock x:Name="DescriptionText"
                   Grid.Row="1"
                   TextWrapping="Wrap"
                   FontSize="13"
                   Foreground="{DynamicResource HelpForeground}"
                   Padding="4"
                   Visibility="Collapsed" />

        <!-- Placeholder when empty -->
        <TextBlock x:Name="PlaceholderText"
                   Grid.Row="1"
                   Text="No project description set."
                   FontSize="13"
                   Foreground="{DynamicResource GitPlaceholderForeground}"
                   Padding="4" />
    </Grid>
</UserControl>
