<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Toolbar -->
    <SolidColorBrush x:Key="ToolbarBackground" Color="#2D2D30" />
    <SolidColorBrush x:Key="ToolbarBorderBrush" Color="#3F3F46" />
    <SolidColorBrush x:Key="ContentBackground" Color="#252526" />

    <!-- Tab buttons -->
    <SolidColorBrush x:Key="TabButtonBorderBrush" Color="#555555" />
    <SolidColorBrush x:Key="TabButtonHoverBorderBrush" Color="#888888" />
    <SolidColorBrush x:Key="TabButtonForeground" Color="#CCCCCC" />
    <SolidColorBrush x:Key="TabButtonActiveBackground" Color="#264F78" />
    <SolidColorBrush x:Key="TabButtonActiveBorderBrush" Color="#569CD6" />
    <SolidColorBrush x:Key="TabButtonInactiveBackground" Color="Transparent" />

    <!-- Add button -->
    <SolidColorBrush x:Key="AddButtonBorderBrush" Color="#555555" />
    <SolidColorBrush x:Key="AddButtonForeground" Color="#AAAAAA" />

    <!-- Empty state -->
    <SolidColorBrush x:Key="EmptyStateForeground" Color="#888888" />

    <!-- Tab icon -->
    <SolidColorBrush x:Key="TabIconNoSessionForeground" Color="#CCCCCC" />
    <SolidColorBrush x:Key="TabIconInactiveDiamondForeground" Color="#9580D0" />
    <SolidColorBrush x:Key="TabIconIdleForeground" Color="#4EC9B0" />
    <SolidColorBrush x:Key="TabIconWorkingForeground" Color="#569CD6" />
    <SolidColorBrush x:Key="TabIconWaitingForeground" Color="#FFB347" />
    <SolidColorBrush x:Key="TabIconErrorForeground" Color="#FF6B6B" />

    <!-- File preview -->
    <SolidColorBrush x:Key="PreviewEmptyForeground" Color="#888888" />
    <SolidColorBrush x:Key="PreviewNoPreviewForeground" Color="#888888" />
    <SolidColorBrush x:Key="PreviewBackground" Color="#1E1E1E" />
    <SolidColorBrush x:Key="PreviewForeground" Color="#E0E0E0" />
    <SolidColorBrush x:Key="PreviewLinkForeground" Color="#4EC9B0" />
    <SolidColorBrush x:Key="PreviewLineNumberForeground" Color="#858585" />

    <!-- Git status -->
    <SolidColorBrush x:Key="GitPlaceholderForeground" Color="#888888" />
    <SolidColorBrush x:Key="GitStagedForeground" Color="#4EC9B0" />
    <SolidColorBrush x:Key="GitUnstagedForeground" Color="#DCDCAA" />
    <SolidColorBrush x:Key="GitStagedLabelForeground" Color="#888888" />

    <!-- File explorer -->
    <SolidColorBrush x:Key="ExplorerToolbarBackground" Color="#2D2D30" />
    <SolidColorBrush x:Key="ExplorerToolbarBorderBrush" Color="#3F3F46" />
    <SolidColorBrush x:Key="ExplorerForeground" Color="#E0E0E0" />
    <SolidColorBrush x:Key="ExplorerSelectedBackground" Color="#264F78" />
    <SolidColorBrush x:Key="ExplorerSelectedForeground" Color="#FFFFFF" />
    <SolidColorBrush x:Key="ExplorerHoverBackground" Color="#2A2D2E" />
    <SolidColorBrush x:Key="ExplorerFolderIconForeground" Color="#DCBD7E" />

    <!-- Panel placeholder -->
    <SolidColorBrush x:Key="PlaceholderBackground" Color="#252526" />
    <SolidColorBrush x:Key="PlaceholderTitleForeground" Color="#AAAAAA" />
    <SolidColorBrush x:Key="PlaceholderSubtitleForeground" Color="#888888" />

    <!-- Title bar -->
    <SolidColorBrush x:Key="TitleBarBackground" Color="#2D2D30" />
    <SolidColorBrush x:Key="TitleBarForeground" Color="#CCCCCC" />
    <SolidColorBrush x:Key="TitleBarButtonHover" Color="#3E3E40" />
    <SolidColorBrush x:Key="CloseButtonHover" Color="#E81123" />
    <SolidColorBrush x:Key="CloseButtonHoverForeground" Color="#FFFFFF" />
    <SolidColorBrush x:Key="MenuIconForeground" Color="#AAAAAA" />

    <!-- Menu -->
    <SolidColorBrush x:Key="MenuBackground" Color="#2D2D30" />
    <SolidColorBrush x:Key="MenuForeground" Color="#F1F1F1" />
    <SolidColorBrush x:Key="MenuSeparatorBrush" Color="#3F3F46" />
    <SolidColorBrush x:Key="MenuHighlightBackground" Color="#3E3E40" />
    <SolidColorBrush x:Key="MenuDisabledForeground" Color="#656565" />
    <SolidColorBrush x:Key="MenuPopupBackground" Color="#1B1B1C" />
    <SolidColorBrush x:Key="MenuPopupBorderBrush" Color="#3F3F46" />

    <!-- Icon button hover (subtle, for small toolbar/icon buttons) -->
    <SolidColorBrush x:Key="IconButtonHoverBackground" Color="#383838" />

    <!-- ScrollBar -->
    <SolidColorBrush x:Key="ScrollBarBackground" Color="#3E3E42" />
    <SolidColorBrush x:Key="ScrollBarThumbBackground" Color="#686868" />
    <SolidColorBrush x:Key="ScrollBarThumbHover" Color="#9E9E9E" />
    <SolidColorBrush x:Key="ScrollBarThumbPressed" Color="#EFEBEF" />
    <SolidColorBrush x:Key="ScrollBarArrowForeground" Color="#999999" />
    <SolidColorBrush x:Key="ScrollBarArrowHover" Color="#1C97EA" />

    <!-- Help / About windows -->
    <SolidColorBrush x:Key="HelpBackground" Color="#1E1E1E" />
    <SolidColorBrush x:Key="HelpForeground" Color="#E0E0E0" />
    <SolidColorBrush x:Key="HelpHeadingForeground" Color="#569CD6" />
    <SolidColorBrush x:Key="HelpMutedForeground" Color="#888888" />
    <SolidColorBrush x:Key="HelpLinkForeground" Color="#4EC9B0" />
    <SolidColorBrush x:Key="HelpCardBackground" Color="#2D2D30" />
    <SolidColorBrush x:Key="HelpCardBorderBrush" Color="#3F3F46" />
    <SolidColorBrush x:Key="HelpKbdBackground" Color="#3E3E42" />
    <SolidColorBrush x:Key="HelpKbdBorderBrush" Color="#555555" />

    <!-- Diff colors -->
    <Color x:Key="DiffAddedColor">#1E3A2B</Color>
    <Color x:Key="DiffRemovedColor">#3A1E1E</Color>
    <Color x:Key="DiffHunkHeaderColor">#2A2A3E</Color>
    <SolidColorBrush x:Key="DiffAddedForeground" Color="#4EC9B0" />
    <SolidColorBrush x:Key="DiffRemovedForeground" Color="#F48771" />
    <SolidColorBrush x:Key="DiffHunkHeaderForeground" Color="#C586C0" />
    <SolidColorBrush x:Key="DiffAddedBackground" Color="{StaticResource DiffAddedColor}" />
    <SolidColorBrush x:Key="DiffRemovedBackground" Color="{StaticResource DiffRemovedColor}" />
    <SolidColorBrush x:Key="DiffHunkHeaderBackground" Color="{StaticResource DiffHunkHeaderColor}" />

    <!-- AI Chat panel -->
    <SolidColorBrush x:Key="ChatBackground" Color="#1E1E1E" />
    <SolidColorBrush x:Key="ChatTextForeground" Color="#E0E0E0" />
    <SolidColorBrush x:Key="ChatMutedForeground" Color="#888888" />
    <SolidColorBrush x:Key="ChatSubtleForeground" Color="#666666" />

    <!-- Chat status bar -->
    <SolidColorBrush x:Key="ChatStatusBarBackground" Color="#252526" />
    <SolidColorBrush x:Key="ChatStatusWorkingForeground" Color="#569CD6" />
    <SolidColorBrush x:Key="ChatStatusWarningForeground" Color="#FFB347" />
    <SolidColorBrush x:Key="ChatStatusErrorForeground" Color="#FF6B6B" />

    <!-- Chat input -->
    <SolidColorBrush x:Key="ChatInputBackground" Color="#1E1E1E" />
    <SolidColorBrush x:Key="ChatInputForeground" Color="#E0E0E0" />
    <SolidColorBrush x:Key="ChatInputBorderBrush" Color="#3C3C3C" />
    <SolidColorBrush x:Key="ChatInputPromptForeground" Color="#569CD6" />

    <!-- Chat buttons -->
    <SolidColorBrush x:Key="ChatButtonBackground" Color="#0E639C" />
    <SolidColorBrush x:Key="ChatButtonForeground" Color="#E0E0E0" />
    <SolidColorBrush x:Key="ChatButtonBorderBrush" Color="#1177BB" />

    <!-- Chat agent selection cards -->
    <SolidColorBrush x:Key="ChatAgentCardBackground" Color="#252526" />
    <SolidColorBrush x:Key="ChatAgentCardBorderBrush" Color="#3C3C3C" />

    <!-- Chat user messages -->
    <SolidColorBrush x:Key="ChatUserBubbleBackground" Color="#264F78" />
    <SolidColorBrush x:Key="ChatUserLabelForeground" Color="#569CD6" />

    <!-- Chat assistant messages -->
    <SolidColorBrush x:Key="ChatAssistantBubbleBackground" Color="#2D2D2D" />
    <SolidColorBrush x:Key="ChatAssistantLabelForeground" Color="#4EC9B0" />

    <!-- Chat thinking -->
    <SolidColorBrush x:Key="ChatThinkingBackground" Color="#252525" />
    <SolidColorBrush x:Key="ChatThinkingBorderBrush" Color="#3C3C3C" />

    <!-- Chat execution -->
    <SolidColorBrush x:Key="ChatExecutionBackground" Color="#1A2A1A" />
    <SolidColorBrush x:Key="ChatExecutionBorderBrush" Color="#2A3A2A" />
    <SolidColorBrush x:Key="ChatExecutionForeground" Color="#6A9955" />

    <!-- Chat permission prompt -->
    <SolidColorBrush x:Key="ChatPermissionBackground" Color="#2A2A1A" />
    <SolidColorBrush x:Key="ChatPermissionBorderBrush" Color="#FF8C00" />
    <SolidColorBrush x:Key="ChatPermissionTitleForeground" Color="#FFB347" />

    <!-- Chat question prompt -->
    <SolidColorBrush x:Key="ChatQuestionBackground" Color="#1A1A2A" />
    <SolidColorBrush x:Key="ChatQuestionBorderBrush" Color="#5B7BB5" />
    <SolidColorBrush x:Key="ChatQuestionTitleForeground" Color="#7BA7D9" />
    <SolidColorBrush x:Key="ChatOptionButtonBackground" Color="#2D2D40" />
    <SolidColorBrush x:Key="ChatOptionButtonBorderBrush" Color="#4A4A6A" />

    <!-- Chat warning -->
    <SolidColorBrush x:Key="ChatWarningBackground" Color="#3A2A10" />
    <SolidColorBrush x:Key="ChatWarningBorderBrush" Color="#6B4B20" />

    <!-- Chat danger / stop -->
    <SolidColorBrush x:Key="ChatDangerBackground" Color="#2A1A1A" />
    <SolidColorBrush x:Key="ChatDangerBorderBrush" Color="#5C2020" />
    <SolidColorBrush x:Key="ChatDangerForeground" Color="#FF6B6B" />
    <SolidColorBrush x:Key="ChatDangerMutedForeground" Color="#AA6666" />
    <SolidColorBrush x:Key="ChatStopButtonBorderBrush" Color="#FF4444" />
    <SolidColorBrush x:Key="ChatKillButtonBackground" Color="#5A2020" />
    <SolidColorBrush x:Key="ChatKillButtonBorderBrush" Color="#8B3030" />

</ResourceDictionary>
