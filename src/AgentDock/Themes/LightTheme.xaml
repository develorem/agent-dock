<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Toolbar -->
    <SolidColorBrush x:Key="ToolbarBackground" Color="#F0F0F0" />
    <SolidColorBrush x:Key="ToolbarBorderBrush" Color="#CCCCCC" />
    <SolidColorBrush x:Key="ContentBackground" Color="#FAFAFA" />

    <!-- Tab buttons -->
    <SolidColorBrush x:Key="TabButtonBorderBrush" Color="#AAAAAA" />
    <SolidColorBrush x:Key="TabButtonForeground" Color="#333333" />
    <SolidColorBrush x:Key="TabButtonActiveBackground" Color="#D0E0F0" />
    <SolidColorBrush x:Key="TabButtonActiveBorderBrush" Color="#4080C0" />
    <SolidColorBrush x:Key="TabButtonInactiveBackground" Color="Transparent" />

    <!-- Add button -->
    <SolidColorBrush x:Key="AddButtonBorderBrush" Color="#AAAAAA" />
    <SolidColorBrush x:Key="AddButtonForeground" Color="#555555" />

    <!-- Empty state -->
    <SolidColorBrush x:Key="EmptyStateForeground" Color="#888888" />

    <!-- Tab icon -->
    <SolidColorBrush x:Key="TabIconNoSessionForeground" Color="#333333" />

    <!-- File preview -->
    <SolidColorBrush x:Key="PreviewEmptyForeground" Color="#999999" />
    <SolidColorBrush x:Key="PreviewNoPreviewForeground" Color="#AAAAAA" />
    <SolidColorBrush x:Key="PreviewBackground" Color="#FFFFFF" />
    <SolidColorBrush x:Key="PreviewForeground" Color="#1E1E1E" />

    <!-- Git status -->
    <SolidColorBrush x:Key="GitPlaceholderForeground" Color="#999999" />
    <SolidColorBrush x:Key="GitStagedForeground" Color="#2E9E40" />
    <SolidColorBrush x:Key="GitUnstagedForeground" Color="#D08B20" />
    <SolidColorBrush x:Key="GitStagedLabelForeground" Color="#888888" />

    <!-- File explorer -->
    <SolidColorBrush x:Key="ExplorerForeground" Color="#1E1E1E" />

    <!-- Panel placeholder -->
    <SolidColorBrush x:Key="PlaceholderBackground" Color="#FAFAFA" />
    <SolidColorBrush x:Key="PlaceholderTitleForeground" Color="#666666" />
    <SolidColorBrush x:Key="PlaceholderSubtitleForeground" Color="#999999" />

    <!-- Menu -->
    <SolidColorBrush x:Key="MenuBackground" Color="#F0F0F0" />
    <SolidColorBrush x:Key="MenuForeground" Color="#1E1E1E" />
    <SolidColorBrush x:Key="MenuSeparatorBrush" Color="#D0D0D0" />
    <SolidColorBrush x:Key="MenuHighlightBackground" Color="#C9DEF5" />
    <SolidColorBrush x:Key="MenuDisabledForeground" Color="#A0A0A0" />
    <SolidColorBrush x:Key="MenuPopupBackground" Color="#F6F6F6" />
    <SolidColorBrush x:Key="MenuPopupBorderBrush" Color="#CCCCCC" />

    <!-- ScrollBar -->
    <SolidColorBrush x:Key="ScrollBarBackground" Color="#F0F0F0" />
    <SolidColorBrush x:Key="ScrollBarThumbBackground" Color="#CDCDCD" />
    <SolidColorBrush x:Key="ScrollBarThumbHover" Color="#A6A6A6" />
    <SolidColorBrush x:Key="ScrollBarThumbPressed" Color="#606060" />
    <SolidColorBrush x:Key="ScrollBarArrowForeground" Color="#868686" />
    <SolidColorBrush x:Key="ScrollBarArrowHover" Color="#1C97EA" />

    <!-- Diff colors -->
    <Color x:Key="DiffAddedColor">#DDFBE6</Color>
    <Color x:Key="DiffRemovedColor">#FBE0DD</Color>
    <Color x:Key="DiffHunkHeaderColor">#E8E8FF</Color>
    <SolidColorBrush x:Key="DiffAddedForeground" Color="#1A7F37" />
    <SolidColorBrush x:Key="DiffRemovedForeground" Color="#CF222E" />
    <SolidColorBrush x:Key="DiffHunkHeaderForeground" Color="#6639BA" />
    <SolidColorBrush x:Key="DiffAddedBackground" Color="{StaticResource DiffAddedColor}" />
    <SolidColorBrush x:Key="DiffRemovedBackground" Color="{StaticResource DiffRemovedColor}" />
    <SolidColorBrush x:Key="DiffHunkHeaderBackground" Color="{StaticResource DiffHunkHeaderColor}" />

</ResourceDictionary>
