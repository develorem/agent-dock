<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Toolbar -->
    <SolidColorBrush x:Key="ToolbarBackground" Color="#F0F0F0" />
    <SolidColorBrush x:Key="ToolbarBorderBrush" Color="#CCCCCC" />
    <SolidColorBrush x:Key="ContentBackground" Color="#FAFAFA" />

    <!-- Tab buttons -->
    <SolidColorBrush x:Key="TabButtonBorderBrush" Color="#AAAAAA" />
    <SolidColorBrush x:Key="TabButtonHoverBorderBrush" Color="#666666" />
    <SolidColorBrush x:Key="TabButtonForeground" Color="#333333" />
    <SolidColorBrush x:Key="TabButtonActiveBackground" Color="#D0E0F0" />
    <SolidColorBrush x:Key="TabButtonActiveBorderBrush" Color="#4080C0" />
    <SolidColorBrush x:Key="TabButtonInactiveBackground" Color="Transparent" />

    <!-- Add button -->
    <SolidColorBrush x:Key="AddButtonBorderBrush" Color="#AAAAAA" />
    <SolidColorBrush x:Key="AddButtonForeground" Color="#555555" />

    <!-- Empty state -->
    <SolidColorBrush x:Key="EmptyStateForeground" Color="#888888" />

    <!-- Tab icon -->
    <SolidColorBrush x:Key="TabIconNoSessionForeground" Color="#333333" />
    <SolidColorBrush x:Key="TabIconInactiveDiamondForeground" Color="#7B68AE" />
    <SolidColorBrush x:Key="TabIconIdleForeground" Color="#1A8A5C" />
    <SolidColorBrush x:Key="TabIconWorkingForeground" Color="#2060B0" />
    <SolidColorBrush x:Key="TabIconWaitingForeground" Color="#D08B20" />
    <SolidColorBrush x:Key="TabIconErrorForeground" Color="#D03030" />

    <!-- File preview -->
    <SolidColorBrush x:Key="PreviewEmptyForeground" Color="#999999" />
    <SolidColorBrush x:Key="PreviewNoPreviewForeground" Color="#AAAAAA" />
    <SolidColorBrush x:Key="PreviewBackground" Color="#FFFFFF" />
    <SolidColorBrush x:Key="PreviewForeground" Color="#1E1E1E" />
    <SolidColorBrush x:Key="PreviewLinkForeground" Color="#0066CC" />
    <SolidColorBrush x:Key="PreviewLineNumberForeground" Color="#999999" />

    <!-- Git status -->
    <SolidColorBrush x:Key="GitPlaceholderForeground" Color="#999999" />
    <SolidColorBrush x:Key="GitStagedForeground" Color="#2E9E40" />
    <SolidColorBrush x:Key="GitUnstagedForeground" Color="#D08B20" />
    <SolidColorBrush x:Key="GitStagedLabelForeground" Color="#888888" />

    <!-- File explorer -->
    <SolidColorBrush x:Key="ExplorerToolbarBackground" Color="#EAEAEC" />
    <SolidColorBrush x:Key="ExplorerToolbarBorderBrush" Color="#D0D0D0" />
    <SolidColorBrush x:Key="ExplorerForeground" Color="#1E1E1E" />
    <SolidColorBrush x:Key="ExplorerSelectedBackground" Color="#C9DEF5" />
    <SolidColorBrush x:Key="ExplorerSelectedForeground" Color="#1E1E1E" />
    <SolidColorBrush x:Key="ExplorerHoverBackground" Color="#E8E8E8" />
    <SolidColorBrush x:Key="ExplorerFolderIconForeground" Color="#B8860B" />

    <!-- Panel placeholder -->
    <SolidColorBrush x:Key="PlaceholderBackground" Color="#FAFAFA" />
    <SolidColorBrush x:Key="PlaceholderTitleForeground" Color="#666666" />
    <SolidColorBrush x:Key="PlaceholderSubtitleForeground" Color="#999999" />

    <!-- Title bar -->
    <SolidColorBrush x:Key="TitleBarBackground" Color="#F0F0F0" />
    <SolidColorBrush x:Key="TitleBarForeground" Color="#333333" />
    <SolidColorBrush x:Key="TitleBarButtonHover" Color="#E0E0E0" />
    <SolidColorBrush x:Key="CloseButtonHover" Color="#E81123" />
    <SolidColorBrush x:Key="CloseButtonHoverForeground" Color="#FFFFFF" />
    <SolidColorBrush x:Key="MenuIconForeground" Color="#555555" />

    <!-- Menu -->
    <SolidColorBrush x:Key="MenuBackground" Color="#F0F0F0" />
    <SolidColorBrush x:Key="MenuForeground" Color="#1E1E1E" />
    <SolidColorBrush x:Key="MenuSeparatorBrush" Color="#D0D0D0" />
    <SolidColorBrush x:Key="MenuHighlightBackground" Color="#C9DEF5" />
    <SolidColorBrush x:Key="MenuDisabledForeground" Color="#A0A0A0" />
    <SolidColorBrush x:Key="MenuPopupBackground" Color="#F6F6F6" />
    <SolidColorBrush x:Key="MenuPopupBorderBrush" Color="#CCCCCC" />

    <!-- Icon button hover (subtle, for small toolbar/icon buttons) -->
    <SolidColorBrush x:Key="IconButtonHoverBackground" Color="#E8E8E8" />

    <!-- ScrollBar -->
    <SolidColorBrush x:Key="ScrollBarBackground" Color="#F0F0F0" />
    <SolidColorBrush x:Key="ScrollBarThumbBackground" Color="#CDCDCD" />
    <SolidColorBrush x:Key="ScrollBarThumbHover" Color="#A6A6A6" />
    <SolidColorBrush x:Key="ScrollBarThumbPressed" Color="#606060" />
    <SolidColorBrush x:Key="ScrollBarArrowForeground" Color="#868686" />
    <SolidColorBrush x:Key="ScrollBarArrowHover" Color="#1C97EA" />

    <!-- Help / About windows -->
    <SolidColorBrush x:Key="HelpBackground" Color="#FFFFFF" />
    <SolidColorBrush x:Key="HelpForeground" Color="#1E1E1E" />
    <SolidColorBrush x:Key="HelpHeadingForeground" Color="#0066CC" />
    <SolidColorBrush x:Key="HelpMutedForeground" Color="#888888" />
    <SolidColorBrush x:Key="HelpLinkForeground" Color="#0066CC" />
    <SolidColorBrush x:Key="HelpCardBackground" Color="#F6F6F6" />
    <SolidColorBrush x:Key="HelpCardBorderBrush" Color="#E0E0E0" />
    <SolidColorBrush x:Key="HelpKbdBackground" Color="#F0F0F0" />
    <SolidColorBrush x:Key="HelpKbdBorderBrush" Color="#CCCCCC" />

    <!-- Diff colors -->
    <Color x:Key="DiffAddedColor">#DDFBE6</Color>
    <Color x:Key="DiffRemovedColor">#FBE0DD</Color>
    <Color x:Key="DiffHunkHeaderColor">#E8E8FF</Color>
    <SolidColorBrush x:Key="DiffAddedForeground" Color="#1A7F37" />
    <SolidColorBrush x:Key="DiffRemovedForeground" Color="#CF222E" />
    <SolidColorBrush x:Key="DiffHunkHeaderForeground" Color="#6639BA" />
    <SolidColorBrush x:Key="DiffAddedBackground" Color="{StaticResource DiffAddedColor}" />
    <SolidColorBrush x:Key="DiffRemovedBackground" Color="{StaticResource DiffRemovedColor}" />
    <SolidColorBrush x:Key="DiffHunkHeaderBackground" Color="{StaticResource DiffHunkHeaderColor}" />

    <!-- AI Chat panel -->
    <SolidColorBrush x:Key="ChatBackground" Color="#FFFFFF" />
    <SolidColorBrush x:Key="ChatTextForeground" Color="#1E1E1E" />
    <SolidColorBrush x:Key="ChatMutedForeground" Color="#888888" />
    <SolidColorBrush x:Key="ChatSubtleForeground" Color="#999999" />

    <!-- Chat status bar -->
    <SolidColorBrush x:Key="ChatStatusBarBackground" Color="#F0F0F0" />
    <SolidColorBrush x:Key="ChatStatusWorkingForeground" Color="#2060B0" />
    <SolidColorBrush x:Key="ChatStatusWarningForeground" Color="#D08B20" />
    <SolidColorBrush x:Key="ChatStatusErrorForeground" Color="#D03030" />

    <!-- Chat input -->
    <SolidColorBrush x:Key="ChatInputBackground" Color="#FFFFFF" />
    <SolidColorBrush x:Key="ChatInputForeground" Color="#1E1E1E" />
    <SolidColorBrush x:Key="ChatInputBorderBrush" Color="#CCCCCC" />
    <SolidColorBrush x:Key="ChatInputPromptForeground" Color="#2060B0" />

    <!-- Chat buttons -->
    <SolidColorBrush x:Key="ChatButtonBackground" Color="#0E639C" />
    <SolidColorBrush x:Key="ChatButtonForeground" Color="#FFFFFF" />
    <SolidColorBrush x:Key="ChatButtonBorderBrush" Color="#1177BB" />

    <!-- Chat agent selection cards -->
    <SolidColorBrush x:Key="ChatAgentCardBackground" Color="#F6F6F6" />
    <SolidColorBrush x:Key="ChatAgentCardBorderBrush" Color="#CCCCCC" />

    <!-- Chat user messages -->
    <SolidColorBrush x:Key="ChatUserBubbleBackground" Color="#D0E0F0" />
    <SolidColorBrush x:Key="ChatUserLabelForeground" Color="#2060B0" />

    <!-- Chat assistant messages -->
    <SolidColorBrush x:Key="ChatAssistantBubbleBackground" Color="#F0F0F0" />
    <SolidColorBrush x:Key="ChatAssistantLabelForeground" Color="#1A8A5C" />

    <!-- Chat thinking -->
    <SolidColorBrush x:Key="ChatThinkingBackground" Color="#F6F6F6" />
    <SolidColorBrush x:Key="ChatThinkingBorderBrush" Color="#E0E0E0" />

    <!-- Chat execution -->
    <SolidColorBrush x:Key="ChatExecutionBackground" Color="#F0F8F0" />
    <SolidColorBrush x:Key="ChatExecutionBorderBrush" Color="#C8E0C8" />
    <SolidColorBrush x:Key="ChatExecutionForeground" Color="#2E7D32" />

    <!-- Chat permission prompt -->
    <SolidColorBrush x:Key="ChatPermissionBackground" Color="#FFF8E1" />
    <SolidColorBrush x:Key="ChatPermissionBorderBrush" Color="#F9A825" />
    <SolidColorBrush x:Key="ChatPermissionTitleForeground" Color="#E65100" />

    <!-- Chat question prompt -->
    <SolidColorBrush x:Key="ChatQuestionBackground" Color="#E8EAF6" />
    <SolidColorBrush x:Key="ChatQuestionBorderBrush" Color="#5C6BC0" />
    <SolidColorBrush x:Key="ChatQuestionTitleForeground" Color="#283593" />
    <SolidColorBrush x:Key="ChatOptionButtonBackground" Color="#E8EAF6" />
    <SolidColorBrush x:Key="ChatOptionButtonBorderBrush" Color="#9FA8DA" />

    <!-- Chat warning -->
    <SolidColorBrush x:Key="ChatWarningBackground" Color="#FFF3E0" />
    <SolidColorBrush x:Key="ChatWarningBorderBrush" Color="#FFB74D" />

    <!-- Chat danger / stop -->
    <SolidColorBrush x:Key="ChatDangerBackground" Color="#FFEBEE" />
    <SolidColorBrush x:Key="ChatDangerBorderBrush" Color="#EF5350" />
    <SolidColorBrush x:Key="ChatDangerForeground" Color="#C62828" />
    <SolidColorBrush x:Key="ChatDangerMutedForeground" Color="#E57373" />
    <SolidColorBrush x:Key="ChatStopButtonBorderBrush" Color="#EF5350" />
    <SolidColorBrush x:Key="ChatKillButtonBackground" Color="#FFCDD2" />
    <SolidColorBrush x:Key="ChatKillButtonBorderBrush" Color="#EF5350" />

</ResourceDictionary>
